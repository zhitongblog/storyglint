{
  "name": "novascribe",
  "version": "1.0.8",
  "description": "智能网文创作 Windows 桌面客户端",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "tsc && vite build && electron-builder --win --x64",
    "build:mac": "tsc && vite build && electron-builder --mac --x64 --arm64",
    "build:mac:intel": "tsc && vite build && electron-builder --mac --x64",
    "build:mac:arm": "tsc && vite build && electron-builder --mac --arm64",
    "build:linux": "tsc && vite build && electron-builder --linux deb --x64",
    "build:all": "tsc && vite build && electron-builder --win --mac --linux",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "typecheck": "tsc --noEmit"
  },
  "author": {
    "name": "NovaScribe Team",
    "email": "lixd220@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@google/generative-ai": "^0.21.0",
    "@tiptap/extension-character-count": "^2.1.13",
    "@tiptap/extension-highlight": "^2.1.13",
    "@tiptap/extension-placeholder": "^2.1.13",
    "@tiptap/extension-text-align": "^2.1.13",
    "@tiptap/extension-underline": "^2.1.13",
    "@tiptap/react": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "antd": "^5.12.0",
    "better-sqlite3": "^9.2.2",
    "dayjs": "^1.11.10",
    "electron-store": "^8.1.0",
    "file-saver": "^2.0.5",
    "googleapis": "^130.0.0",
    "https-proxy-agent": "^7.0.6",
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/file-saver": "^2.0.7",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "overrides": {
    "glob": "^10.0.0",
    "rimraf": "^5.0.0"
  },
  "build": {
    "appId": "com.novascribe.app",
    "productName": "NovaScribe",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build-resources/entitlements.mac.plist",
      "entitlementsInherit": "build-resources/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
